{
    "name": "goodm4ven/anvil",
    "description": "An internal support package used for Laravel package development",
    "keywords": [
        "laravel",
        "tallstack",
        "goodm4ven",
        "anvil",
        "internal",
        "support"
    ],
    "homepage": "https://github.com/goodm4ven/PACKAGE_LARAVEL_anvil",
    "license": "MIT",
    "authors": [
        {
            "name": "GoodM4ven",
            "email": "goodm4ven@proton.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4||^8.3",
        "goodm4ven/tailwind-merge": "^1.0",
        "laravel/boost": "^1.8",
        "illuminate/contracts": "^11.0||^12.0",
        "illuminate/support": "^11.0||^12.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "GoodMaven\\Anvil\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GoodMaven\\Anvil\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@prepareback",
            "@php vendor/bin/testbench boost:update --ansi"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepareback": [
            "@clear",
            "@php vendor/bin/testbench package:discover --ansi",
            "@php vendor/bin/testbench optimize:clear"
        ],
        "preparefront": [
            "npm run build"
        ],
        "format": [
            "npm run format:blade",
            "npm run format:prettier",
            "vendor/bin/pint"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "lint": [
            "@format",
            "@analyse"
        ],
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "test": "vendor/bin/pest",
        "testel": "vendor/bin/pest --parallel",
        "testcov": "vendor/bin/pest --coverage",
        "green": [
            "@prepareback",
            "@preparefront",
            "@lint",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "GoodMaven\\Anvil\\AnvilServiceProvider"
            ],
            "aliases": {}
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
